<table class="table table-striped">
	<thead>
		<tr>
			<th>User Name</th>
			<th>Department</th>
			<th>Admin?</th>
			<th/>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.first_name %> <%= user.last_name %></td>
				<td><%= user.department.name %></td>
				<td><%= user.admin ? "Yes" : "No" %></td>
				<td><%= link_to 'Edit', edit_user_path(user.id) %> | <%= link_to 'Delete', user_path(user.id), method: :delete %>
			</tr>
		<% end %>
		<tr>
			<td colspan="4"><%= link_to 'New User', new_user_path, class: 'pull-right' %></td>
		</tr>
	</td>
</table>