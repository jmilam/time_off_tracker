<div class="row">
	<h3 class="text-center">Add New Department</h3>
</div>

<%= render partial: 'shared/back' %>

<div class="row">
	<%= form_for :department, url: department_index_path, method: :post do |f| %>
		<div class="form-group">
			<div class="col-sm-12 col-md-6 col-md-offset-3">
				<%= f.label 'Department Name' %>
				<%= f.text_field :name, class: 'form-control' %>
			</div>
		</div>

		<div class="col-sm-12 col-md-6 col-md-offset-3" style="margin-top:15px;">
			<%= f.submit "Add Department" , class: 'btn btn-block btn-primary' %>
		</div>
	<% end %>
</div>